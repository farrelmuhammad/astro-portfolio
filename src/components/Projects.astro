---
import fetchApi from "../lib/strapi";

const portfolio = await fetchApi({
  endpoint: "portfolios", // the content type to fetch
  method: "get",
  params: `?populate=*`,
});

const getRandomColorClass = () => {
  const colors = [
    "bg-red-300",
    "bg-blue-300",
    "bg-green-300",
    "bg-yellow-300",
    "bg-purple-300",
    "bg-indigo-300",
    "bg-pink-300",
    "bg-cyan-300",
    "bg-amber-300",
    "bg-lime-300",
  ];
  const randomIndex = Math.floor(Math.random() * colors.length);
  return colors[randomIndex];
};

const getRandomText = () => {
  const texts = ["ReactJS", "TypeScript", "Tailwind CSS", "Next.js", "GraphQL"];
  const randomIndex = Math.floor(Math.random() * texts.length);
  return texts[randomIndex];
};
---

<section class="flex flex-col items-start justify-between gap-10 p-12">
  <h2 class="text-3xl md:text-4xl lg:text-3xl font-semibold">
    Selected Projects
  </h2>
  <ul class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full">
    {
      portfolio.map((portfolio) => (
        <li class="flex flex-col">
          <div class="flex flex-col items-start p-2 border-2 rounded-xl h-full transition-transform duration-300 transform hover:scale-105 hover:shadow-md">
            <img
              width={480}
              height={240}
              src={
                import.meta.env.STRAPI_URL +
                portfolio.attributes.imageUrl.data.attributes.formats.large.url
              }
              alt={portfolio.attributes.title}
              class="w-full h-auto rounded-lg"
            />
            <a href={portfolio.attributes.url}>
              <h4 class="mt-2 text-2xl underline">
                {portfolio.attributes.title}
              </h4>
            </a>
            <p class="text-lg">{portfolio.attributes.description}</p>
            <div class="flex flex-row justify-between gap-2 mb-2">
              {[...Array(5)].map(() => (
                <span
                  class={`rounded-lg px-2.5 py-1 text-white text-base ${getRandomColorClass()}`}
                >
                  {getRandomText()}
                </span>
              ))}
            </div>
          </div>
        </li>
      ))
    }
  </ul>
</section>
