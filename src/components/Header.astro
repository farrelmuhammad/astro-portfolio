---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="bg-white shadow-md py-4">
  <nav class="flex items-center justify-between px-[90px]">
    <div class="flex items-start justify-items-start w-[120px]">
      <h1 class="text-2xl font-bold">
        <a href="/" class="text-black">Farrel</a>
      </h1>
    </div>

    <!-- Hamburger -->
    <div class="md:hidden">
      <button id="mobile-menu-toggle" class="focus:outline-none">
        <svg
          class="h-8 w-8 fill-current text-black"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
        >
          <path
            fill-rule="evenodd"
            d="M3 5h18a1 1 0 010 2H3a1 1 0 010-2zm0 7h18a1 1 0 010 2H3a1 1 0 010-2zm0 7h18a1 1 0 010 2H3a1 1 0 010-2z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden fixed inset-0 bg-white z-50 hidden">
      <div class="flex flex-col items-center justify-center h-full">
        <button
          id="close-mobile-menu"
          class="absolute top-4 right-4 text-gray-700 hover:text-black focus:outline-none"
        >
          <!-- Icon Close -->
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
        <HeaderLink
          href="/"
          class="text-lg font-semibold text-black hover:underline py-2"
        >
          Home
        </HeaderLink>
        <HeaderLink
          href="/blog"
          class="text-lg font-semibold text-black hover:underline py-2"
        >
          Blog
        </HeaderLink>
        <HeaderLink
          href="/about"
          class="text-lg font-semibold text-black hover:underline py-2"
        >
          Projects
        </HeaderLink>
        <button
          class="bg-gray-900 text-white text-lg font-light py-2 px-6 border border-gray-300 rounded-lg shadow-sm mt-4"
        >
          Say Hello!
        </button>
      </div>
    </div>

    <!-- Desktop Menu -->
    <div class="hidden md:flex justify-items-center space-x-4">
      <HeaderLink href="/" class="nav-link hover:underline">Home</HeaderLink>
      <HeaderLink
        href="#"
        data-tooltip="Coming Soon"
        class="nav-link hover:underline group relative"
      >
        Blog
        <span
          class="opacity-0 bg-gray-800 text-white text-xs rounded-lg py-1 px-2 absolute bottom-[-40px] left-1/2 transform -translate-x-1/2 transition duration-300 ease-in-out group-hover:opacity-100"
        >
          Coming Soon!
        </span>
      </HeaderLink>
      <HeaderLink
        href="#"
        data-tooltip="Coming Soon"
        class="nav-link hover:underline group relative"
      >
        Projects
        <span
          class="opacity-0 bg-gray-800 text-white text-xs rounded-lg py-1 px-2 absolute bottom-[-40px] left-1/2 transform -translate-x-1/2 transition duration-300 ease-in-out group-hover:opacity-100"
        >
          Coming Soon!
        </span>
      </HeaderLink>
    </div>
    <div class="hidden md:flex justify-items-end space-x-1">
      <a
        href="mailto:farrelf11@gmail.com"
        class="bg-gray-900 hover:underline text-white text-lg font-light py-0 px-9 border border-gray-300 rounded-lg shadow-sm"
      >
        Say Hello!
      </a>
    </div>
  </nav>
</header>
